# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /recipes                controllers.RecipeManagerController.getAllRecipes(request: Request)
GET         /recipes/:name          controllers.RecipeManagerController.getRecipeByName(name)
# GET         /recipes/:ingredients          controllers.RecipeManagerController.getRecipesByIngredients(ingredients)
# GET         /recipes/:difficulty          controllers.RecipeManagerController.getRecipesByDifficulty(difficulty)
# GET         /recipes/:rating          controllers.RecipeManagerController.getRecipesByRating(rating)
POST        /recipes                controllers.RecipeManagerController.createRecipe()


GET         /ingredients            controllers.IngredientController.getAllIngredients()
POST        /ingredients            controllers.IngredientController.createIngredient()

GET         /rating            controllers.RatingController.getAllRatings()
POST        /rating            controllers.RatingController.addRating()

GET         /difficulty            controllers.DifficultyController.getAllDifficulties()
POST        /difficulty            controllers.DifficultyController.addDifficulty()
