# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /recipes                controllers.RecipeManagerController.getRecipesByFilter(request: Request)
GET         /recipes/:id          controllers.RecipeManagerController.getRecipeById(id: Long)
POST        /recipes                controllers.RecipeManagerController.createRecipe()


GET         /ingredients            controllers.IngredientController.getAllIngredients()
POST        /ingredients            controllers.IngredientController.createIngredient()

GET         /rating            controllers.RatingController.getAllRatings()
POST        /rating            controllers.RatingController.addRating()

GET         /difficulty            controllers.DifficultyController.getAllDifficulties()
POST        /difficulty            controllers.DifficultyController.addDifficulty()
