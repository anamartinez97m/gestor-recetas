# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST        /recipes                controllers.RecipeManagerController.createRecipe()
POST        /ingredients            controllers.IngredientController.createIngredient()

GET         /recipes                controllers.RecipeManagerController.getAllRecipes()
GET         /ingredients            controllers.IngredientController.getAllIngredients()
GET         /recipes/:name           controllers.RecipeManagerController.getRecipeByName(name)


