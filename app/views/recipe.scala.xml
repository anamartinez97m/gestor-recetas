@(recipe: Recipe)

<recipe>
    <id>@recipe.getId()</id>
    <name>@recipe.getName()</name>
    <stepsDescription>@recipe.getStepsDescription()</stepsDescription>
    @rating(recipe.getRating())
    @difficulty(recipe.getDifficulty())
    @ingredients_quantity(recipe.getIngredientsQuantityList())
</recipe>